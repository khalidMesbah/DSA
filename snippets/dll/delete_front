
	void delete_front() {
		if(!head)
			return;

		Node* cur = head->next;
		delete_node(head);
		head = cur;

		// Integrity change
		if(head)
			head->prev = nullptr;
		else if(!length)
			tail = nullptr;

		debug_verify_data_integrity();
	}

  void delete_front() {
    if (!head)
      return;

    Node *new_head = head->next;
    delete_node(head);
    head = new_head;

    head ? (head->prev = nullptr) : (tail = nullptr);

    debug_verify_data_integrity();
  }

